@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}
<div>
    <h1 class="md-4">@Model.Walker.Name Details</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <section class="container">
        <img style="width: 100px; float:left; margin-right:20px"
             src="@Html.DisplayFor(model => model.Walker.ImageUrl)" />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Html.DisplayFor(model => model.Walker.Name)</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Html.DisplayFor(model => model.Walker.Neighborhood.Name)</span>
        </div>

    </section>
    <hr class="mt-5" />
    <div class="clearfix"></div>
    <div class="row">
        <section class="col-8 container mt-5">

            <h1 class="text-left">Walks</h1>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Date:
                        </th>
                        <th>
                            Name:
                        </th>
                        <th>
                            Duration:
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Walk.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.Walk[i].Date)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Owner[i].Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Walk[i].Duration)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
        <section class="col-lg-4 col-md-8 container mt-5">
            <p>@Html.DisplayFor(model => model.totalTimeString)</p>
        </section>
    </div>
</div>